<div class="app-card-container">
  <div class="card">
    <h1>Pages#about</h1>
        
    <hr>
        
    <div class="row">
      <div class="col-md-4">
        <%= image_tag "profile1.jpg", width: 300, alt:"Profile Picture", class: "profile-img" %>
        <!-- https://yt3.ggpht.com/-48qjYNIF6Ws/AAAAAAAAAAI/AAAAAAAAAAA/XB42MZYoFPc/s900-c-k-no-mo-rj-c0xffffff/photo.jpg -->
        
        <div class="skills">
          <% @skills.each do |skill| %>
            <div class="skill">
              <h4><%= skill.title %></h4>
              <div class="progress">
                <div 
                  class="progress-bar progress-bar-striped bg-warning"
                  role="progressbar"
                  aria-valuenow="<%= skill.percent_utilized %>"
                  aria-valuemax="100"
                  style="width: <%= skill.percent_utilized %>%"
                ></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
            
      <div class="col-md-8">
        <p>Find me in app/views/pages/about.html.erb</p>
        
        <p>Another one.</p>
        
        <p>
          
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controls="jobHistory"
          >
            Job History
          </button>
          
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controls="education"
          >
            Education
          </button>
          
          <p>
            <div class="collapse" id="jobHistory">
              <div class="card card-block">
                Jobsssssssss
              </div>
              
              <div class="card card-block">
                Jobsssssssss
              </div>
              
              <div class="card card-block">
                Jobsssssssss
              </div>
              
              <div class="card card-block">
                Jobsssssssss
              </div>
            </div>
          </p>
          
          <p>
            <div class="collapse" id="education">
              <div class="card card-block">
                Schooooooool
              </div>
              
              <div class="card card-block">
                Schooooooool
              </div>
              
              <div class="card card-block">
                Schooooooool
              </div>
              
              <div class="card card-block">
                Schooooooool
              </div>
            </div>
          </p>
        </p>
      </div>
    </div>
  </div>
</div>
