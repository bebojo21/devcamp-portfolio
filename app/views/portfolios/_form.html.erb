<%= form_for(@portfolio_item) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :blog_title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, id: :blog_subtitle, class: 'form-control' %>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, id: :blog_body, class: 'form-control', rows: 16 %>
      </div>
    </div>
  </div>
  
  
    <div class="col-md-12">
      <h3>Technologies Used:</h3>
      <div>
        <%= form.fields_for :technologies do |technology_form| %>
          <li>
            <%= technology_form.label :name %>
            <%= technology_form.text_field :name, class: 'form-control' %>
          </li>
        <% end %>
      </div>
          
      <hr>
      
      <div class="form-group">
        <%= form.submit 'Save Portfolio item', class: 'btn btn-success' %>
      </div>
    </div>
<% end %>
